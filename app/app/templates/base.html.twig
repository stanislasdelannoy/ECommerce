<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <nav class="nav"></nav>
    </head>
    <body>
    <ul class="nav bg-warning p-2">
        <li class="nav-item">
            <h3 style="color: white; margin: 0 95px 0 10px">TOPACHATON</h3>
        </li>
        <li class="nav-item">
            <a style="color: white" class="nav-link" {% if current_menu is defined and current_menu == 'products' %}active{% endif %} href="{{ path('home') }}">Produits</a>
        </li>
        <li class="nav-item">
            <a style="color: white" class="nav-link" href={{ path("product.index") }}>Panier</a>
        </li>
        <li class="nav-item">
            <a style="color: white" class="nav-link" href={{ path("admin.product.index") }}>Editer les produits</a>
        </li>
    </ul>
        {% block body %}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    </body>
</html>
